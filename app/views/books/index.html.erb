<div class="container">
  <div class="index">
    <h2>Books</h2>
    <table>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
      
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book) %></td>
          <td><%= link_to "Edit", edit_book_path(book) %></td>
          <td><%= link_to "Destroy", book_path(book), method: :delete %></td>
        </tr>
      <% end %>
    </table>
  </div>
  
  <div class="new">
    <h3>New book</h3>
    
    <%= form_with model:@book, url:'/books', local:true do |f| %>
      <h5>Title</h5>
      <%= f.text_field :title %>
      <h5>Body</h5>
      <%= f.text_area :body %>
      <p><%= f.submit 'Create Book' %></p>
    <% end %>
  </div>
</div>