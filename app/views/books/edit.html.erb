<div class="container">
  <h2>Editing Book</h2>
  
    <% if @book.errors.any? %>
      <div class="error">
        <h4><%= @book.errors.count %> errors prohibited this book from being saved:</h4>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <%= form_with model:@book, local:true do |f| %>
      <h5>Title</h5>
      <%= f.text_field :title %>
      <h5>Body</h5>
      <%= f.text_area :body %>
      <p><%= f.submit 'Update Book' %></p>
    <% end %>
    
    <%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %>
</div>