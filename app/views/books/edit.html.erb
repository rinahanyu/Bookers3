<div class="container">
  <h2>Editing Book</h2>
    <%= form_with model:@book, url:'/books/#{@book.id}/update', local:true do |f| %>
      <h5>Title</h5>
      <%= f.text_field :title %>
      <h5>Body</h5>
      <%= f.text_area :body %>
      <p><%= f.submit 'Update Book' %></p>
    <% end %>
    
    <%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %>
</div>